<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'>
  <ui:style>
  .base {
    background: rgba(0, 0, 0, 0.8);
    padding: 5px 20px;
    position: absolute;
    bottom: 0;
    right: 0;
    left: 0;
    z-index: 300;
    color: #fff;
  }
  
  .layout {
    margin-right: 20px;
  }
  </ui:style>
  <div class='{style.base}'>
    <span class='{style.layout}'>
      Application URL: <input type='text' ui:field='appUrl' />
    </span>
    <span class='{style.layout}'>
      Symbol Manifest: <input type='text' ui:field='symbolManifestUrl' />
    </span>
    <input type='button' value='Save' ui:field='saveButton' />
  </div>
</ui:UiBinder>
