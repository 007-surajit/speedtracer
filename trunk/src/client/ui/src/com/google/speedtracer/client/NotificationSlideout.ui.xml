<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'>
  <ui:style>
  .positionRoot {
    position:absolute;
    width: 100%;
    z-index: 30;
  }
  
  .slideout {
    color: #000;
    margin-left: auto;
    margin-right: auto;
    width: 500px;
    height: 0;
    border-right: 1px solid #000;
    border-left: 1px solid #000;
    border-bottom: 1px solid #000;    
    background-color: rgba(204, 204, 61, 0.9);
    \-webkit-box-shadow: 5px 5px 5px rgba(0, 0, 0, 0.3);    
    \-webkit-border-bottom-left-radius: 8px;
    \-webkit-border-bottom-right-radius: 8px;
    \-webkit-transition: height 200ms ease-in-out;
    overflow: hidden;
  }
  
  .slideout a {
    color: #000;
    text-decoration: underline;
  }

  .slideout ol {
    padding: 0 20px;
  }
  </ui:style>
  <div class='{style.positionRoot}'>
    <div ui:field='borderElem' class='{style.slideout}'>
      <div style="padding: 10px;" ui:field='contentElem'></div>
    </div>
  </div>
</ui:UiBinder>
