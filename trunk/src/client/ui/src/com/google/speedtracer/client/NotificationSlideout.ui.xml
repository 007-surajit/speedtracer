<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'>
  <ui:style>
  .positionRoot {
    position:absolute;
    width: 100%;
    z-index: 30;
  }
  
  .slideout {
    font-weight: bold;
    margin-left: auto;
    margin-right: auto;
    width: 300px;
    height: 0;
    border-right: 1px solid #000;
    border-left: 1px solid #000;
    border-bottom: 1px solid #000;    
    background-color: #fbe78c;
    text-align: center;
    \-webkit-box-shadow: 0 5px 5px #888;    
    \-webkit-border-bottom-left-radius: 5px;
    \-webkit-border-bottom-right-radius: 5px;
    \-webkit-transition: height .5s ease-in-out;
    overflow: hidden;
  }
  
  </ui:style>
  <div class='{style.positionRoot}'>
    <div ui:field='borderElem' class='{style.slideout}'>
      <div style="padding: 10px;" ui:field='contentElem'></div>
    </div>
  </div>
</ui:UiBinder>
